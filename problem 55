class Solution {
public:
    int minTimeToVisitAllPoints(vector<vector<int>>& points) {
        int res = 0;
        for(int i = 0; i < points.size()-1; i++) {
            int v1 = abs(points[i][0] - points[i + 1][0]);
            int v2 = abs(points[i][1] - points[i + 1][1]);
            res += max(v1, v2);
        }
        return res;
    }
};
